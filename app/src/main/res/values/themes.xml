<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CornLab" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#00A4A3A3</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/fab_bground</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/green</item>
        <!-- Font Style -->
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    <style name="CircleListImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="TextSubSettings">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/deep_forest_green</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextDescSettings">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/midnight_gray</item>
        <item name="android:gravity">center|left</item>
    </style>


    <style name="BottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemBackground">@android:color/transparent</item>
    </style>

    <style name="RoundedTop" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@drawable/rounded_top</item>
    </style>

    <style name="NoOutlineFab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="elevation">0dp</item>
        <item name="strokeColor">@null</item>
    </style>

</resources>